<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:background="@drawable/ic_profile_bg"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:src="@drawable/ic_default_user"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_title_size"
                        android:text="友行号"/>
                    <TextView
                        android:id="@+id/you_xin_id"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_content_size"
                        android:text=""
                        android:textColor="@android:color/darker_gray"/>

                </RelativeLayout>
                <ImageView
                    android:visibility="invisible"
                    android:src="@drawable/ic_forward"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:layout_width="@dimen/me_icon_size"
                    android:layout_height="@dimen/me_icon_size"/>
            </LinearLayout>
            <View
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_title_size"
                        android:text="昵称"/>
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_content_size"
                        android:id="@+id/nick"
                        android:textColor="@android:color/darker_gray"/>
                </RelativeLayout>
                <ImageView
                    android:src="@drawable/ic_forward"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:layout_width="@dimen/me_icon_size"
                    android:layout_height="@dimen/me_icon_size"/>
            </LinearLayout>
            <View
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_title_size"
                        android:text="手机号"/>
                    <TextView
                        android:id="@+id/tel"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_content_size"
                        android:text=""
                        android:textColor="@android:color/darker_gray"/>
                </RelativeLayout>
                <ImageView
                    android:src="@drawable/ic_forward"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:layout_width="@dimen/me_icon_size"
                    android:layout_height="@dimen/me_icon_size"/>
            </LinearLayout>
            <View
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_title_size"
                        android:text="邮箱"/>
                    <TextView
                        android:id="@+id/email"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_content_size"
                        android:text=""
                        android:textColor="@android:color/darker_gray"/>
                </RelativeLayout>
                <ImageView
                    android:src="@drawable/ic_forward"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:layout_width="@dimen/me_icon_size"
                    android:layout_height="@dimen/me_icon_size"/>
            </LinearLayout>
            <View
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_title_size"
                        android:text="地区"/>
                    <TextView
                        android:id="@+id/region"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_content_size"
                        android:text=""
                        android:textColor="@android:color/darker_gray"/>
                </RelativeLayout>
                <ImageView
                    android:src="@drawable/ic_forward"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:layout_width="@dimen/me_icon_size"
                    android:layout_height="@dimen/me_icon_size"/>
            </LinearLayout>
            <View
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_title_size"
                        android:text="性别"/>
                    <TextView
                        android:id="@+id/gender"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_content_size"
                        android:textColor="@android:color/darker_gray"/>
                </RelativeLayout>
                <ImageView
                    android:src="@drawable/ic_forward"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:layout_width="@dimen/me_icon_size"
                    android:layout_height="@dimen/me_icon_size"/>
            </LinearLayout>
            <View
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_title_size"
                        android:text="生日"/>
                    <TextView
                        android:id="@+id/birthday"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_content_size"
                        android:textColor="@android:color/darker_gray"/>
                </RelativeLayout>
                <ImageView
                    android:src="@drawable/ic_forward"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:layout_width="@dimen/me_icon_size"
                    android:layout_height="@dimen/me_icon_size"/>
            </LinearLayout>
            <View
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_title_size"
                        android:text="个人签名"/>
                    <TextView
                        android:id="@+id/signature"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/info_content_size"
                        android:text=""
                        android:textColor="@android:color/darker_gray"/>
                </RelativeLayout>
                <ImageView
                    android:src="@drawable/ic_forward"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:layout_width="@dimen/me_icon_size"
                    android:layout_height="@dimen/me_icon_size"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>
